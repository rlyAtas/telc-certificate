</head>
<body>
  <div class="wrap">
    <div class="card card--status">
      <h1 class="status-page__title">Status Ihrer Anfrage</h1>

      <%
        const statusMap = {
          ACTIVE: {
            tone: 'active',
            badge: 'Aktiv',
            icon: 'üïí',
            message: 'Die √úberpr√ºfung des Zertifikats l√§uft.',
          },
          CERTIFICATE_FOUND: {
            tone: 'success',
            badge: 'Gefunden',
            icon: '‚úÖ',
            message: 'Das Zertifikat wurde gefunden.',
          },
          CHECKING_EXPIRED: {
            tone: 'warning',
            badge: 'Abgeschlossen',
            icon: '‚ÑπÔ∏è',
            message: 'Die √úberpr√ºfung ist abgeschlossen. Im Pr√ºfzeitraum wurde kein Zertifikat gefunden.',
          },
          CERTIFICATE_FAILED: {
            tone: 'error',
            badge: 'Nicht gefunden',
            icon: '‚ùå',
            message: 'Das Zertifikat konnte innerhalb des Pr√ºfzeitraums nicht gefunden werden.',
          },
        };

        const statusView = statusMap[status] ?? {
          tone: 'neutral',
          badge: 'Unbekannt',
          icon: '‚ÑπÔ∏è',
          message: 'Der aktuelle Status konnte nicht eindeutig bestimmt werden.',
        };

        const dateFormatter = new Intl.DateTimeFormat('de-DE', {
          year: 'numeric',
          month: '2-digit',
          day: '2-digit',
        });

        const dateTimeFormatter = new Intl.DateTimeFormat('de-DE', {
          year: 'numeric',
          month: '2-digit',
          day: '2-digit',
          hour: '2-digit',
          minute: '2-digit',
        });

        const formatDate = (value) => dateFormatter.format(new Date(value));
        const formatDateTime = (value) => dateTimeFormatter.format(new Date(value));

        const lastCheckValue = lastCheckedAt ? formatDateTime(lastCheckedAt) : 'Noch nicht gepr√ºft';
        const nextCheckValue = nextRunAt ? formatDateTime(nextRunAt) : 'Wird geplant';
        const shouldShowNextCheck = status === 'ACTIVE';

        const progressMap = {
          ACTIVE: {
            step1: 'done',
            step2: 'done',
            step3: 'active',
            step4: 'todo',
            step3Text: 'Aktiv: Das System pr√ºft den Pr√ºfzeitraum automatisch weiter.',
            step4Title: 'Ergebnis abrufen',
            step4Text: 'Sobald ein Zertifikat gefunden wird, erscheint hier der direkte Link.',
            nextText: 'Wir pr√ºfen automatisch alle 4 Stunden weiter. Sie erhalten zus√§tzlich eine E-Mail, sobald ein Zertifikat gefunden wurde.',
          },
          CERTIFICATE_FOUND: {
            step1: 'done',
            step2: 'done',
            step3: 'done',
            step4: 'done',
            step3Text: 'Abgeschlossen: Die automatische Pr√ºfung ist beendet.',
            step4Title: 'Zertifikat gefunden',
            step4Text: 'Der direkte Zertifikat-Link ist verf√ºgbar.',
            nextText: 'Die Pr√ºfung ist abgeschlossen. √ñffnen Sie Ihr Zertifikat √ºber die Schaltfl√§che oben.',
          },
          CHECKING_EXPIRED: {
            step1: 'done',
            step2: 'done',
            step3: 'done',
            step4: 'done',
            step3Text: 'Abgeschlossen: Die automatische Pr√ºfung ist beendet.',
            step4Title: 'Pr√ºfung abgeschlossen',
            step4Text: 'Im Pr√ºfzeitraum wurde kein Zertifikat gefunden.',
            nextText: 'Die automatische Suche ist beendet. Falls n√∂tig, k√∂nnen Sie eine neue Anfrage starten.',
          },
          CERTIFICATE_FAILED: {
            step1: 'done',
            step2: 'done',
            step3: 'done',
            step4: 'done',
            step3Text: 'Abgeschlossen: Die automatische Pr√ºfung ist beendet.',
            step4Title: 'Pr√ºfung abgeschlossen',
            step4Text: 'Im Pr√ºfzeitraum wurde kein Zertifikat gefunden.',
            nextText: 'Die automatische Suche ist beendet. Falls n√∂tig, k√∂nnen Sie eine neue Anfrage starten.',
          },
        };

        const progressView = progressMap[status] ?? {
          step1: 'done',
          step2: 'done',
          step3: 'active',
          step4: 'todo',
          step3Text: 'Aktiv: Das System pr√ºft den Pr√ºfzeitraum automatisch weiter.',
          step4Title: 'Ergebnis abrufen',
          step4Text: 'Sobald ein Zertifikat gefunden wird, erscheint hier der direkte Link.',
          nextText: 'Die Anfrage wird aktuell verarbeitet. Bitte pr√ºfen Sie den Status erneut.',
        };
      %>

      <section class="status-banner status-banner--<%= statusView.tone %>">
        <span class="status-chip status-chip--<%= statusView.tone %>">
          <%= statusView.icon %> <%= statusView.badge %>
        </span>
        <p class="status-banner__message"><%= statusView.message %></p>
        <% if (certificateUrl) { %>
          <a class="status-cta" href="<%= certificateUrl %>">Zertifikat √∂ffnen</a>
        <% } %>
      </section>

      <section class="card subcard status-flow" aria-label="Fortschritt">
        <p class="subcard__title">Ihr Fortschritt</p>
        <ol class="flow__list">
          <li class="flow__item flow__item--<%= progressView.step1 %>">
            <span class="flow__marker" aria-hidden="true"></span>
            <div>
              <p class="flow__title">1. Anfrage senden</p>
              <p class="flow__text">Erledigt: Ihre Anfrage wurde erstellt.</p>
            </div>
          </li>
          <li class="flow__item flow__item--<%= progressView.step2 %>">
            <span class="flow__marker" aria-hidden="true"></span>
            <div>
              <p class="flow__title">2. E-Mail best√§tigen</p>
              <p class="flow__text">Erledigt: Ihre E-Mail-Adresse wurde best√§tigt.</p>
            </div>
          </li>
          <li class="flow__item flow__item--<%= progressView.step3 %>">
            <span class="flow__marker" aria-hidden="true"></span>
            <div>
              <p class="flow__title">3. Automatische Pr√ºfung l√§uft</p>
              <p class="flow__text"><%= progressView.step3Text %></p>
            </div>
